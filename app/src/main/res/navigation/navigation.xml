<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nagivation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.androidcamerard.views.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_cameraFragment"
            app:destination="@id/cameraFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.androidcamerard.views.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" >
        <action
            android:id="@+id/action_cameraFragment_to_cameraOutputFragment"
            app:destination="@id/cameraOutputFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/cameraFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/cameraOutputFragment"
        android:name="com.example.androidcamerard.views.CameraOutputFragment"
        android:label="fragment_camera_output"
        tools:layout="@layout/fragment_camera_output" >
        <action
            android:id="@+id/action_cameraOutputFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/startFragment" />
        <action
            android:id="@+id/action_cameraOutputFragment_to_cameraFragment"
            app:destination="@id/cameraFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/cameraFragment" />
    </fragment>
</navigation>