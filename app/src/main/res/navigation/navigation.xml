<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nagivation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.androidcamerard.views.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_labelDetectionLiveFragment"
            app:destination="@id/labelDetectionLiveFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/startFragment" />
        <action
            android:id="@+id/action_startFragment_to_staticImageAnalysisFragment"
            app:destination="@id/staticImageAnalysisFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_startFragment_to_objectDetectionLiveFragment"
            app:destination="@id/objectDetectionLiveFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/labelDetectionLiveFragment"
        android:name="com.example.androidcamerard.views.LabelDetectionLiveFragment"
        android:label="LabelDetectionLiveFragment" >
        <action
            android:id="@+id/action_labelDetectionLiveFragment_to_cameraOutputFragment"
            app:destination="@id/cameraOutputFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/labelDetectionLiveFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/staticImageAnalysisFragment"
        android:name="com.example.androidcamerard.views.StaticImageAnalysisFragment"
        android:label="StaticImageAnalysisFragment" >
        <action
            android:id="@+id/action_staticImageAnalysisFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/cameraOutputFragment"
        android:name="com.example.androidcamerard.views.CameraOutputFragment"
        android:label="CameraOutputFragment" >
        <action
            android:id="@+id/action_cameraOutputFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_cameraOutputFragment_to_labelDetectionLiveFragment"
            app:destination="@id/labelDetectionLiveFragment" />
    </fragment>
    <fragment
        android:id="@+id/objectDetectionLiveFragment"
        android:name="com.example.androidcamerard.views.ObjectDetectionLiveFragment"
        android:label="ObjectDetectionLiveFragment" />
</navigation>