<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:fontFamily">google-sans</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="SearchTextBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/app_text_size_medium</item>
        <item name="android:paddingTop">@dimen/search_text_bar_padding_top_bottom_small</item>
        <item name="android:paddingBottom">@dimen/search_text_bar_padding_top_bottom_small</item>
        <item name="android:paddingStart">@dimen/search_text_bar_padding_start_end_large</item>
        <item name="android:paddingEnd">@dimen/search_text_bar_padding_start_end_large</item>
        <item name="android:layout_marginBottom">@dimen/search_text_bar_bottom_margin_large</item>
        <item name="android:background">@drawable/search_text_bar_rounded_corners</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BottomSheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bottom_sheet_rounded_corners</item>
        <item name="behavior_peekHeight">@dimen/bottom_sheet_peek_height</item>
        <item name="behavior_hideable">false</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior
        </item>
    </style>

    <style name="BottomSheetTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_sheet_peek_height</item>
        <item name="android:paddingStart">@dimen/bottom_sheet_padding_start</item>
        <item name="android:paddingEnd">@dimen/bottom_sheet_padding_end</item>
        <item name="android:paddingTop">@dimen/bottom_sheet_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/bottom_sheet_padding_top_bottom</item>
    </style>

    <style name="BottomSheetTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BottomSheetButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/button_default</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingTop">@dimen/button_padding_top_bottom_medium</item>
        <item name="android:paddingBottom">@dimen/button_padding_top_bottom_medium</item>
        <item name="android:paddingStart">@dimen/button_padding_start_end_small</item>
        <item name="android:paddingEnd">@dimen/button_padding_start_end_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/app_text_size_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="BottomSheetRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>