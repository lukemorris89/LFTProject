<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ImageLabellingStaticFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".views.ImageLabellingStaticFragment"
            android:background="@color/black">

            <ImageView
                android:id="@+id/image_labelling_static_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/image_preview_margin"
                android:layout_marginEnd="@dimen/image_preview_margin"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="@string/image_preview" />

        </FrameLayout>

        <include
            android:id="@+id/bottom_sheet"
            layout="@layout/image_labelling_static_bottom_sheet"
            app:behavior_hideable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>